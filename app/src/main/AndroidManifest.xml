<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools">

    <uses-permission android:name="android.permission.POST_NOTIFICATIONS"/>

    <application
    android:allowBackup="true"
    android:dataExtractionRules="@xml/data_extraction_rules"
    android:fullBackupContent="@xml/backup_rules"
    android:icon="@mipmap/pomodoro_icon"
    android:label="@string/app_name"
    android:roundIcon="@mipmap/pomodoro_icon"
    android:supportsRtl="true"
    android:theme="@style/Theme.PomodoroAPP"
    tools:targetApi="31">

    <activity
        android:name="com.example.pomodorotimer.MainActivity"
        android:exported="true"
        android:launchMode="singleTop">
        <intent-filter>
            <action android:name="android.intent.action.MAIN" />
            <category android:name="android.intent.category.LAUNCHER" />
        </intent-filter>
    </activity>

    <activity
        android:name="com.example.pomodorotimer.SettingsActivity"
        android:exported="false"/>

    <activity
        android:name="com.example.pomodorotimer.StatisticsActivity"
        android:exported="false"/>
</application>
    </manifest>